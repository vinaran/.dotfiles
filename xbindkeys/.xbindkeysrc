# Increase volume
"sh $HOME/bin/volume.sh up"  
    XF86AudioRaiseVolume

# Decrease volume
"sh $HOME/bin/volume.sh down"  
    XF86AudioLowerVolume

# Toggle mute
"sh $HOME/bin/volume.sh mute"  
    XF86AudioMute

"sh $HOME/bin/brightness.sh inc"  
    m:0x0 + c:233
    XF86MonBrightnessUp

"sh $HOME/bin/brightness.sh dec"  
    m:0x0 + c:232
    XF86MonBrightnessDown
